  <hr />
  {{template "_thread_list_nav" list $ 0}}
  <hr />

  {{range $T := $.D.Threads -}}
   <div><a href="{{$.N.Root}}/{{escboard $T.BoardName}}/">/{{html $T.BoardName}}/</a></div>
   {{template "op" list $ $T.BoardName (threadptr $T.IBCommonThread) (postptr $T.OP) 1 4 0 -}}
   {{if $T.SkippedReplies -}}
    <div><strong class="t_skipped">{{$T.SkippedReplies}}
    {{if ne $T.SkippedReplies 1}}replies{{else}}reply{{end}}
    and
    {{$T.SkippedFiles}}
    attachment{{if ne $T.SkippedFiles 1}}s{{end}}
    not shown.</strong></div>
   {{- end -}}
   {{range $i, $v := $T.Replies -}}
    {{template "reply" list $ $T.BoardName (threadptr $T.IBCommonThread) (postptr $v) 1 4 0 -}}
   {{end -}}
   <div style="clear:both"></div>
   <hr />
  {{end -}}

  {{template "_thread_list_nav" list $ 1}}
